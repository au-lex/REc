{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "A simple screen recorder using WebRTC",
    "action": {
      "default_popup": "index.html"
     
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "storage", "tabCapture", "offscreen"]
    
  }
  